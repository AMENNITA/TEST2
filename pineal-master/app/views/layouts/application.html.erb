  </head>


  <body>
    
    <% if user_signed_in? %>
      <div class="navbar navbar-default navbar-static-top">
          <a class="navbar-brand" href = "/../">
            <%= image_tag("gLogos.png")%>
          </a>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
              <li>
                <%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete, :id => "signOut", class: "btn" %>
              <li>
            </ul>
        </div>
      </div>
    <div class="container">
      <%= yield %>
    </div>

    </div>
    <% end %>
    
    <%# Sign In sin Container %>
    <% if not user_signed_in? %>
      <%= yield %>
    <% end %>

